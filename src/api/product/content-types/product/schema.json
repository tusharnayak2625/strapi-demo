{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "tshirt",
        "sports",
        "mug",
        "hoodie"
      ],
      "required": true
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "regular",
        "xs",
        "s",
        "md",
        "l",
        "xl",
        "xxl"
      ],
      "required": false,
      "default": "regular"
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "none",
        "black",
        "white",
        "blue",
        "red",
        "green",
        "yellow",
        "grey",
        "maroon"
      ],
      "required": false,
      "default": "none"
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "qty": {
      "type": "integer",
      "required": true
    }
  }
}
